{
  "name": "report-api",
  "version": "1.0.0",
  "description": "API for HTTP Archive reports",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "start": "DATABASE=tech-report-api-prod functions-framework --target=app",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:live": "bash ../test-api.sh",
    "build": "docker build -t report-api .",
    "run": "docker run -p 8080:8080 report-api"
  },
  "dependencies": {
    "@google-cloud/firestore": "8.3.0",
    "@google-cloud/functions-framework": "^5.0.0",
    "@google-cloud/storage": "7.19.0"
  },
  "devDependencies": {
    "@jest/transform": "^30.2.0",
    "jest": "30.2.0",
    "supertest": "7.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js",
      "!index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "globals": {
      "__filename": false,
      "__dirname": false
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(.*\\.mjs$))"
    ],
    "transform": {}
  }
}

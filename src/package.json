{
  "name": "tech-report-api",
  "version": "1.0.0",
  "description": "API for HTTP Archive technology reports",
  "main": "index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "start:functions": "export DATABASE=tech-report-api-prod && functions-framework --target=app",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:live": "bash ../test-api.sh"
  },
  "dependencies": {
    "@google-cloud/firestore": "7.3.0",
    "@google-cloud/functions-framework": "^4.0.0"
  },
  "devDependencies": {
    "jest": "29.7.0",
    "nodemon": "3.0.1",
    "supertest": "^7.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js",
      "!index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
